.first_tab .goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx 20rpx 30rpx 0;
}
.first_tab .goods_item .item_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .item_img image {
  width: 70%;
}
.first_tab .goods_item .item_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .item_info .info_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .item_info .info_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
